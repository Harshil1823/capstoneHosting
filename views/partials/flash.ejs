<div class="d-flex justify-content-center">
  <div class="alert-container">
    <% if (success && success.length) { %>
      <!-- Display a success alert if a success message exists -->
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <!-- Button to close the success alert -->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    
    <% if (error && error.length) { %>
      <!-- Display an error alert if an error message exists -->
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <!-- Button to close the error alert -->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  </div>
</div>

<style>
  /* Styling for the alert container */
  .alert-container {
    max-width: 800px; /* Set the maximum width of the alert container */
    margin: 20px auto; /* Center the container horizontally and add vertical spacing */
  }
</style>